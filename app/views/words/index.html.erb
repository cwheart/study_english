<%- model_class = Word -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.id %></td>
        <td><%= word.name %></td>
        <td><%= word.pronounce %></td>
        <td><%= word.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
