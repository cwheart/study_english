<%= simple_form_for @new_word, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :word_name %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                new_words_path, :class => 'btn' %>
  </div>
<% end %>
