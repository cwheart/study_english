<%- model_class = NewWord -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:depth) %>:</strong></dt>
  <dd><%= @new_word.depth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wrong_times) %>:</strong></dt>
  <dd><%= @new_word.wrong_times %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @new_word.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:word_id) %>:</strong></dt>
  <dd><%= @new_word.word_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              new_words_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_new_word_path(@new_word), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              new_word_path(@new_word),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
