<h1>Listing words</h1>

<table>
  <thead>
    <tr>
      <th>单词</th>
      <th>发音</th>
      <th>中文</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= word.pronounce %></td>
        <td><%= word.content %></td>
        <td><%= link_to 'Show', [:admin, word] %></td>
        <td><%= link_to 'Edit', edit_admin_word_path(word) %></td>
        <td><%= link_to 'Destroy', [:admin, word], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @words %>

<br>

