<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
      </tr>
      <tr>
        <td><%= text_field_tag :name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
